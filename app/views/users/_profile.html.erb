<div class="col-lg-4">
  <h2>User info</h2>
    <div class="w-75 mx-auto">
     <%= image_tag current_user.get_profile_image(100,100) %>
    </div>
    <table class="table w-75 mx-auto">
    <thead>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <td>Introduction</td>
         <td class="table-borderless"><%= current_user.introduction %></td>
      </tr>
    </thead>
  </table>
    <%= link_to edit_user_path((current_user.id)) , class: 'btn btn-outline-dark w-100 mb-3' do %><i class="fas fa-user-cog "></i><% end %>
    <div class="w-75 mx-auto">
    <%= form_with model: book do |f| %>
    <h1>New book</h1>
    <label>Title</label>
    <%= f.text_field :title , class: "w-100 mb-3" %>
    <label>Opinion</label>
    <%= f.text_area :body , class: "w-100 mb-3" %>
    <%= f.submit "Create Book", class: 'btn btn-success rounded text-white'%>
    <% end %>
  </div>
</div>