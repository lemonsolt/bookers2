<main>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div class="container">
    <div class="row mt-3">
      <div class="col-lg-4">
        <h2>User info</h2>
        <%= image_tag 'no_image', size: "100x100"%>
        <table class="table w-75 mx-auto">
          <thead>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th class="table-borderless"><%= @user.introduction %></th>
            </tr>
          </thead>
        </table>
        <%= link_to edit_user_path , class: 'btn btn-outline-dark w-100 mb-3' do %><i class="fas fa-user-cog "></i><% end %>
        <div class="w-75 mx-auto">
          <%= form_with model: @book do |f| %>
          <h1>New book</h1>
          <label>Title</label>
          <%= f.text_field :title , class: "w-100 mb-3" %>
          <label>Opinion</label>
          <%= f.text_area :body , class: "w-100 mb-3" %>
          <%= f.submit "Create Book", class: 'btn btn-success rounded text-white'%>
          <% end %>
        </div>
      </div>
      <div class="col-lg-8">
        <h2>Books</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="book-title">Title</th>
              <th class="book-body">Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>

                <td><span><%= book.title %></span></td>
                <td><span><%= book.opinion %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>