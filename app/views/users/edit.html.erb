<main>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto mt-3">
        <h2>User info</h2>
        <% if @user.errors.any?%>
          <h2>
            <%= @user.errors.count %>error prohibited this obj from being saved:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @user do |f| %>
          <label>Name</label>
          <%= f.text_field :name, autofocus: true, class: 'w-100 mb-3' %>
          <label>Image</label>
          <%= f.file_field :profile_image, placeholder:"ファイルを選択", accept: "image/*",class: 'w-100 mb-3' %>
          <label>Introduction</label>
          <%= f.text_area :introduction ,class: 'w-100 mb-3' %>
          <%= f.submit "Update User",class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</main>