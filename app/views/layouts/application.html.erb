<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/5f8827088c.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <div class="collapse navbar-collapse" >
            <ul class="nav-bar-nav ml-auto list-unstyled list-inline text-white ">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <i class="fas fa-home"></i><%= link_to "Home", users_path, class: 'nav-link  text-white' %>
                </li>
                <li class="nav-item">
                  <i class="fas fa-users"></i><%= link_to "Users", users_path, class: 'nav-link  text-white' %>
                </li>
                <li class="nav-item">
                  <i class="fas fa-book-open"></i><%= link_to "Books", books_path, class: 'nav-link  text-white' %>
                </li>
                <li class="nav-item">
                  <i class="fas fa-sign-out-alt"></i><%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link  text-white' %>
                </li>
              <% else %>
                <li class="nav-item">
                  <i class="fas fa-home"></i><%= link_to "Home", root_path, class: 'nav-link  text-white' %>
                </li>
                <li class="nav-item">
                  <i class="fas fa-link"></i><%= link_to "About", about_path, class: 'nav-link  text-white' %>
                </li>
                <li class="nav-item">
                  <i class="fas fa-user-plus"></i><%= link_to "Sign up", new_user_registration_path, class: 'nav-link  text-white' %>
                </li>
                <li class="nav-item">
                  <i class="fas fa-sign-in-alt"></i><%= link_to "Log in", new_user_session_path, class: 'nav-link  text-white' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
      
    </footer>
    </body>
</html>
