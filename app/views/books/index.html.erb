<main>
  <div>
    <%= flash[:notice] %>
  </div>
  <div class="container">
    <div class="row mt-3">
        <%= render 'profile', book: @book %>
      <div class="col-lg-8">
      <h2>Books</h2>
      <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= image_tag book.user.get_profile_image(80,80) %>
                </td>
                <td>
                  <%= link_to book_path(book) do %>
                  <span><%= book.title %></span>
                  <% end %></td>
                <td><span><%= book.body %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</main>