<main>

  <div class="container">
    <div class="row mt-3">
        <%= render 'profile', user: @user ,book: @book %>
      <div class="col-lg-8">
      <h2>Books</h2>
      <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td></td>
                <td><span><%= book.title %></span></td>
                <td><span><%= book.body %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</main>