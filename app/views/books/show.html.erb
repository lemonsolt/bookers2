<main>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="container">
    <div class="row mt-3">
      <div class="col-lg-4">
        <h2>User info</h2>
        <div class="w-75 mx-auto">
        <%= image_tag @book.user.get_profile_image(100,100) %>
        </div>
        <table class="table w-75 mx-auto">
          <thead>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <td>Introduction</td>
              <td class="table-borderless"><%= @user.introduction %></td>
            </tr>
          </thead>
        </table>
        <%= link_to edit_user_path(:id) , class: 'btn btn-outline-dark w-100 mb-3' do %><i class="fas fa-user-cog "></i><% end %>
        <div class="w-75 mx-auto">
          <%= form_with model: @book do |f| %>
            <h1>New book</h1>
            <label>Title</label>
            <%= f.text_field :title , class: "w-100 mb-3" %>
            <label>Opinion</label>
            <%= f.text_area :body , class: "w-100 mb-3" %>
            <%= f.submit "Create Book", class: 'btn btn-success rounded text-white'%>
          <% end %>
        </div>
      </div>
      <div class="col-lg-8">
        <h2>Book detail</h2>
        <table class="table table-striped">
          <tbody>
              <tr>
                <td class="col-lg-2">
                  <% link_to user_path(@book.user.id) do %>
                    <%= image_tag @book.user.get_profile_image(80,80) %>
                  <% end %>
                  <br>
                  <%= link_to user_path(@book.user.id) do%><%= @book.user.name %><% end %>
                </td>
                <td class="col-lg-2">
                  <%= link_to book_path(@book) do %>
                    <%= @book.title %>
                  <% end %></td>
                </td class="col-lg-4">
                <td><%= @book.body %></td>
                <td><%= link_to "Edit" ,edit_book_path(@book.id), class: 'btn btn-success rounded text-white' %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" ,class: 'btn btn-danger rounded text-white' %></td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>