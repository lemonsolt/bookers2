<main>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto mt-3">
        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
          <label>Name</label>
          <%= f.text_field :title, autofocus: true, class: 'w-100 mb-3' %>
          <label>Opinion</label>
          <%= f.text_area :body ,class: 'w-100 mb-3' %>
          <%= f.submit "Update Book",class: 'btn btn-success rounded text-white mb-3' %>
        <% end %>

        <%= link_to "Show", book_path(current_user)%> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>